{
  "name": "the-props-list-web-app",
  "version": "1.0.0",
  "description": "React web app for The Props List",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 200",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "screenshots": "node scripts/generate-help-screenshots.js",
    "screenshots:test": "playwright test tests/screenshot-generator.spec.ts",
    "deploy": "npm run build && cd .. && firebase deploy --only hosting:app",
    "deploy:preview": "npm run build && cd .. && firebase hosting:channel:deploy preview"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "firebase": "^11.10.0",
    "framer-motion": "^11.0.0",
    "html2pdf.js": "^0.12.0",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "rollup": "^3.29.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "keywords": [
    "react",
    "tailwind",
    "framer-motion",
    "template",
    "props-bible",
    "dashboard"
  ],
  "author": "Assistant",
  "license": "MIT"
}
