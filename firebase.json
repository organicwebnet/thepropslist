{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "marketing",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      { "source": "/app/**", "destination": "https://app.thepropslist.uk/:splat", "type": 301 },
      { "source": "/login", "destination": "https://app.thepropslist.uk/login", "type": 301 },
      { "source": "/signup", "destination": "https://app.thepropslist.uk/signup", "type": 301 }
    ],
    "rewrites": [
      { "source": "/help/**", "destination": "/help/index.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "hosting": {
      "port": 5000
    }
  },
  "firestore": {
    "rules": "_docs/firestore.rules"
  }
}
