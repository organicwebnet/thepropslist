{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["scripts/**/*", "src/__tests__/**/*"]
}
